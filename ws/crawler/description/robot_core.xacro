    </link>
    

    <gazebo reference="back_right_wheel">
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.1</mu>
                        <mu2>0.1</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>
        <gazebo reference="center_right_wheel">
